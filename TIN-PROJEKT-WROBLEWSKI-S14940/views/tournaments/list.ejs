<%- include('./../fragments/header.ejs') %>
    <main>
        <h2>Turnieje</h2>
        <table class="table-list">
            <thead>
            <tr>
                <th>Lokalizacja</th>
                <th>Nagroda</th>
                <th>Akcje</th>
            </tr>
            </thead>
            <tbody>
            <% for (let tournament of tournaments) { %>
            <tr>
                <td><%= tournament.location %></td>
                <td><%= tournament.price %></td>
                <td>
                    <ul class="list-actions">
                        <li>
                            <a href="/tournaments/details/<%=tournament._id%>" class="list-actions-button-details">Szczegóły</a>
                        </li>
                        <li>
                            <a href="/tournaments/edit/<%=tournament._id%>" class="list-actions-button-edit">Edytuj</a>
                        </li>
                        <li>
                            <a href="/tournaments/delete/<%=tournament._id%>" class="list-actions-button-delete">Usuń</a>
                        </li>
                    </ul>
                </td>
            </tr>
            <% } %>
            </tbody>
        </table>
        <p><a href="tournaments/add" class="button-add">Dodaj nowy turniej</a></p>
    </main>
<%- include('./../fragments/footer.ejs') %>